---
import Layout from '../../layouts/Layout.astro';
import { getProductBySlug, getProducts } from '../../lib/api';

export async function getStaticPaths() {
  try {
    const data = await getProducts({ limit: 100 });
    return data.products.map(p => ({
      params: { slug: p.slug },
    }));
  } catch {
    return [];
  }
}

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect('/productos');
}

let product = null;
let error = null;

try {
  product = await getProductBySlug(slug);
} catch (e) {
  error = 'Producto no encontrado';
}

if (error || !product) {
  return Astro.redirect('/404');
}

const pageTitle = `${product.name}${product.brand ? ` - ${product.brand}` : ''} | LabMedical`;
const pageDescription = product.description || `${product.name} de ${product.brand}. Registro sanitario: ${product.registro_sanitario}. Solicite cotizacion.`;
---

<Layout title={pageTitle} description={pageDescription} ogImage={product.image_url || undefined}>
  <div class="product-detail">
    <div class="container">
      <nav class="breadcrumb" aria-label="Ruta de navegacion">
        <a href="/productos">Catalogo</a>
        <span aria-hidden="true">/</span>
        <span>{product.name}</span>
      </nav>
      
      <div class="product-content">
        <!-- Columna izquierda: Imagenes -->
        <div class="product-images">
          {product.image_url ? (
            <img src={product.image_url} alt={product.name} class="main-image" loading="eager" />
          ) : (
            <div class="no-image-large" aria-label="Sin imagen disponible">
              <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="3" y="3" width="18" height="18" rx="2"/><circle cx="8.5" cy="8.5" r="1.5"/><path d="m21 15-5-5L5 21"/></svg>
            </div>
          )}
          
          {product.additional_images && product.additional_images.length > 0 && (
            <div class="additional-images">
              {product.additional_images.map((img: string) => (
                <img src={img} alt={product.name} class="thumb-image" loading="lazy" />
              ))}
            </div>
          )}
        </div>

        <!-- Columna derecha: Info -->
        <div class="product-info">
          <span class="product-brand">{product.brand}</span>
          <h1>{product.name}</h1>
          
          {product.model_number && (
            <p class="model-number">Modelo: {product.model_number}</p>
          )}

          <p class="description">{product.description}</p>

          <!-- CTAs principales -->
          <div class="actions-primary">
            <button
              class="btn-add-quote"
              id="addToQuoteBtn"
              data-product-id={product.id}
              data-product-name={product.name}
              data-product-brand={product.brand}
              data-product-slug={product.slug}
            >
              Agregar a Cotizacion
            </button>
          </div>

          <!-- CTAs documentales -->
          <div class="actions-docs">
            {product.technical_sheet_url && (
              <a href={product.technical_sheet_url} class="btn-doc" target="_blank" rel="noopener noreferrer">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/><line x1="12" y1="18" x2="12" y2="12"/><polyline points="9 15 12 18 15 15"/></svg>
                Descargar Ficha Tecnica (PDF)
              </a>
            )}
            <div class="reg-sanitario">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 12l2 2 4-4"/><path d="M12 2a10 10 0 1 0 0 20 10 10 0 0 0 0-20z"/></svg>
              Registro Sanitario DIGEMID: <strong>{product.registro_sanitario}</strong>
            </div>
          </div>

          <!-- Info regulatoria -->
          <div class="regulatory-grid">
            <div class="reg-item">
              <span class="reg-label">Marca</span>
              <span class="reg-value">{product.brand}</span>
            </div>
            <div class="reg-item">
              <span class="reg-label">Pais de Origen</span>
              <span class="reg-value">{product.origin_country}</span>
            </div>
            <div class="reg-item">
              <span class="reg-label">Garantia</span>
              <span class="reg-value">{product.warranty_period} meses</span>
            </div>
            {product.model_number && (
              <div class="reg-item">
                <span class="reg-label">Modelo</span>
                <span class="reg-value">{product.model_number}</span>
              </div>
            )}
          </div>
        </div>
      </div>

      <!-- Tabla de especificaciones -->
      {Object.keys(product.specifications).length > 0 && (
        <section class="specs-section">
          <h2>Especificaciones Tecnicas</h2>
          <table class="specs-table">
            <thead>
              <tr>
                <th>Parametro</th>
                <th>Valor</th>
              </tr>
            </thead>
            <tbody>
              {Object.entries(product.specifications).map(([key, value]) => (
                <tr>
                  <td>{key}</td>
                  <td>{String(value)}</td>
                </tr>
              ))}
            </tbody>
          </table>
        </section>
      )}

      {Object.keys(product.regulatory_info).length > 0 && (
        <section class="specs-section">
          <h2>Informacion Regulatoria</h2>
          <table class="specs-table">
            <thead>
              <tr>
                <th>Campo</th>
                <th>Detalle</th>
              </tr>
            </thead>
            <tbody>
              {Object.entries(product.regulatory_info).map(([key, value]) => (
                <tr>
                  <td>{key}</td>
                  <td>{String(value)}</td>
                </tr>
              ))}
            </tbody>
          </table>
        </section>
      )}
    </div>
  </div>
</Layout>

<style>
  .product-detail {
    padding: 2rem 0;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 2rem;
    font-size: 0.875rem;
    color: var(--gris-secundario);
  }

  .breadcrumb a {
    color: var(--azul-institucional);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .product-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    margin-bottom: 3rem;
  }

  @media (max-width: 768px) {
    .product-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }

  .main-image {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: 8px;
    background: #f8fafc;
    border: 1px solid var(--gris-borde);
  }

  .no-image-large {
    width: 100%;
    height: 400px;
    background: #f8fafc;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #cbd5e1;
    border: 1px solid var(--gris-borde);
  }

  .additional-images {
    display: flex;
    gap: 0.5rem;
    margin-top: 0.75rem;
    overflow-x: auto;
  }

  .thumb-image {
    width: 72px;
    height: 72px;
    object-fit: cover;
    border-radius: 6px;
    border: 2px solid var(--gris-borde);
    cursor: pointer;
    transition: border-color 0.15s;
  }

  .thumb-image:hover {
    border-color: var(--azul-institucional);
  }

  .product-brand {
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--azul-institucional);
  }

  .product-info h1 {
    font-size: 1.75rem;
    color: var(--gris-texto);
    margin: 0.25rem 0 0.5rem;
    font-weight: 700;
    line-height: 1.3;
  }

  .model-number {
    color: var(--gris-secundario);
    font-size: 0.9375rem;
    margin-bottom: 0.75rem;
  }

  .description {
    color: var(--gris-pizarra);
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .actions-primary {
    margin-bottom: 1.25rem;
  }

  .btn-add-quote {
    width: 100%;
    padding: 0.875rem 2rem;
    background: var(--azul-institucional);
    color: white;
    border: none;
    border-radius: 6px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.15s;
    font-family: inherit;
  }

  .btn-add-quote:hover {
    background: var(--azul-hover);
  }

  .btn-add-quote.added {
    background: #16a34a;
  }

  .actions-docs {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .btn-doc {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: white;
    color: var(--azul-institucional);
    text-decoration: none;
    border: 1px solid var(--azul-institucional);
    border-radius: 6px;
    font-weight: 500;
    font-size: 0.9375rem;
    transition: background 0.15s;
  }

  .btn-doc:hover {
    background: var(--azul-light);
  }

  .reg-sanitario {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: #f0fdf4;
    border: 1px solid #bbf7d0;
    border-radius: 6px;
    color: #15803d;
    font-size: 0.9375rem;
  }

  .regulatory-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.75rem;
  }

  .reg-item {
    padding: 0.75rem;
    background: #f8fafc;
    border-radius: 6px;
  }

  .reg-label {
    display: block;
    font-size: 0.75rem;
    color: var(--gris-secundario);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.25rem;
    font-weight: 500;
  }

  .reg-value {
    font-size: 0.9375rem;
    color: var(--gris-texto);
    font-weight: 600;
  }

  /* Tablas de especificaciones */
  .specs-section {
    margin-bottom: 2rem;
  }

  .specs-section h2 {
    font-size: 1.25rem;
    color: var(--gris-texto);
    margin-bottom: 1rem;
    font-weight: 600;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--gris-borde);
  }

  .specs-table {
    width: 100%;
    border-collapse: collapse;
    background: white;
    border-radius: 8px;
    overflow: hidden;
    border: 1px solid var(--gris-borde);
  }

  .specs-table th {
    background: #f8fafc;
    padding: 0.75rem 1rem;
    text-align: left;
    font-weight: 600;
    font-size: 0.8125rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--gris-pizarra);
    border-bottom: 1px solid var(--gris-borde);
  }

  .specs-table td {
    padding: 0.75rem 1rem;
    border-bottom: 1px solid #f1f5f9;
    font-size: 0.9375rem;
  }

  .specs-table td:first-child {
    font-weight: 500;
    color: var(--gris-texto);
    width: 40%;
  }

  .specs-table td:last-child {
    color: var(--gris-pizarra);
  }

  .specs-table tr:last-child td {
    border-bottom: none;
  }

  .specs-table tr:hover td {
    background: #f8fafc;
  }
</style>

<script>
  import { addToCart, quoteCart } from '../../lib/stores/quoteCart';

  const btn = document.getElementById('addToQuoteBtn') as HTMLButtonElement;
  if (btn) {
    // Verificar si ya esta en el carrito
    const productId = Number(btn.dataset.productId);
    const inCart = quoteCart.get().some(p => p.id === productId);
    if (inCart) {
      btn.textContent = 'Ya en cotizacion';
      btn.classList.add('added');
    }

    btn.addEventListener('click', () => {
      addToCart({
        id: productId,
        name: btn.dataset.productName || '',
        brand: btn.dataset.productBrand || '',
        slug: btn.dataset.productSlug || '',
      });
      btn.textContent = 'Agregado a cotizacion';
      btn.classList.add('added');
    });
  }
</script>